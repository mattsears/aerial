- article = @article if @article
.article
  %h2
    %a{:href => article.permalink}
      =article.title
  %h3
    ="Posted by #{article.author} on #{humanized_date article.publish_date}"
  %p.entry
    =article.body_html
  .meta
    %span
      Tags:
    =link_to_tags article.tags
    %br/
    %span
      Meta:
    %a{:href => "#{article.permalink}", :rel => 'permalink'}
      permalink
